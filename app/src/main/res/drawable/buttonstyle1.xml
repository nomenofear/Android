<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#8F8B8B" />
        </shape>
    </item>
    <!-- 主体背景颜色值,控件间的间距 -->
    <item
        android:bottom="2dp"
        android:top="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape>
            <solid android:color="@android:color/black" />
        </shape>
    </item>

</layer-list>